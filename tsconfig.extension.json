{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "vscode"],
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "include": ["src/client/**/*", "src/shared/**/*", "src/types/**/*"],
  "exclude": ["src/server/**/*", "**/*.test.ts", "**/*.spec.ts", "**/*.eval.ts"]
}
