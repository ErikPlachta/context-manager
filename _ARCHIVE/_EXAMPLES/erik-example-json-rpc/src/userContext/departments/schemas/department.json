    "properties": {
      "id": { "type": "string" },
      "name": { "type": "string" },
      "description": { "type": "string" },
      "leadId": { "type": "string" },
      "parentDepartmentId": { "type": ["string", "null"] },
      "applicationIds": { "type": "array", "items": { "type": "string" } },
      "policyIds": { "type": "array", "items": { "type": "string" } },
      "resourceIds": { "type": "array", "items": { "type": "string" } }
    }
  }
}
